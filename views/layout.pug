doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Project Memebers Only
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
    link(rel="stylesheet", href="/stylesheets/style.css")
  body(class="flex flex-col min-h-screen")

    // Header
    header(class="bg-green-500 text-white p-4")
      div(class="container mx-auto flex justify-between items-center")
        div(class="text-xl font-bold")
          | Members_Only
        
        p=message
        
        if currentUser
          nav
            ul(class="flex space-x-4")
              li
                a(href="/groups/create", class="hover:underline") Create Group
              li
                a(href="/groups/userGroups", class="hover:underline") My Groups
              li
                a(href="/groups/", class="hover:underline") All Groups              
              li
                a(href="/logout", class="hover:underline") Log Out

    // Main Content
    main(class="flex-grow container mx-auto p-4")
      block content

    // Footer
    footer(class="bg-gray-800 text-white p-4 mt-4")
      div(class="container mx-auto text-center")
        p
